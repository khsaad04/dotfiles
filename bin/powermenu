#!/usr/bin/env bash

entries="󰗼 Exit\n Shutdown\n⏾ Suspend\n󰒲 Hibernate\n Reboot"

selected=$(echo -e "$entries"|~/bin/wmenu-custom| awk '{print tolower($2)}')

if ! command -v systemctl >/dev/null 2>&1
then
    ctl=loginctl
else
    ctl=systemctl
fi

case "$selected" in
    exit)
        swaymsg exit;;
    shutdown)
        $ctl poweroff;;
    suspend)
        $ctl suspend;;
    hibernate)
        $ctl hibernate;;
    reboot)
        $ctl reboot;;
esac
