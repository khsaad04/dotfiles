#!/usr/bin/env bash

case $1 in
drun)
    j4-dmenu-desktop --no-generic --term "footclient" --dmenu='wmenu -bi -f "Iosevka 10" -N 0f1513 -n dee4e0 -M 0f1513 -m dee4e0 -S 86d6bf -s 00382d'
    ;;
run)
    wmenu-run -bi -f "Iosevka 10" -N 0f1513 -n dee4e0 -M 0f1513 -m dee4e0 -S 86d6bf -s 00382d
    ;;
*)
    wmenu -bi -f "Iosevka 10" -N 0f1513 -n dee4e0 -M 0f1513 -m dee4e0 -S 86d6bf -s 00382d
    ;;
esac
