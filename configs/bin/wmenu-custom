#!/usr/bin/env bash

case $1 in
drun)
    j4-dmenu-desktop --no-generic --term "footclient" --dmenu='wmenu -bi -f "Iosevka 10" -N 14140c -n e5e3d6 -M 14140c -m e5e3d6 -S c9cb78 -s 313300'
    ;;
run)
    wmenu-run -bi -f "Iosevka 10" -N 14140c -n e5e3d6 -M 14140c -m e5e3d6 -S c9cb78 -s 313300
    ;;
*)
    wmenu -bi -f "Iosevka 10" -N 14140c -n e5e3d6 -M 14140c -m e5e3d6 -S c9cb78 -s 313300
    ;;
esac
