#!/usr/bin/env bash

case $1 in
drun)
    j4-dmenu-desktop --no-generic --term "footclient" --dmenu='wmenu -bi -f "Iosevka 10" -N 14140c -n e6e3d5 -M 14140c -m e6e3d5 -S cccb76 -s 333200'
    ;;
run)
    wmenu-run -bi -f "Iosevka 10" -N 14140c -n e6e3d5 -M 14140c -m e6e3d5 -S cccb76 -s 333200
    ;;
*)
    wmenu -bi -f "Iosevka 10" -N 14140c -n e6e3d5 -M 14140c -m e6e3d5 -S cccb76 -s 333200
    ;;
esac
